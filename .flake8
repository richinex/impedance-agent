[flake8]
max-line-length = 120
extend-ignore = E203, W503, F401, E402
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow imports not at top in main.py due to matplotlib config
    impedance_agent/cli/main.py: E402